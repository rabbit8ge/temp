<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise6"
    android:orientation="vertical"
    tools:context=".AboutActivity" >

    <com.example.view.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/huise5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_feedback"
            style="@style/textStyle_black_16sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/entry"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/suggest" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/huise6" />

        <LinearLayout
            android:id="@+id/linear_currentVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_currentVersion1"
                style="@style/textStyle_black_16sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="@string/version2" />

            <TextView
                android:id="@+id/tv_currentVersion"
                style="@style/textStyle_black_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="当前版本1.1.1"
                android:textColor="@color/huise5" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/huise6" />

        <TextView
            android:id="@+id/tv_updateLog"
            style="@style/textStyle_black_16sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/entry"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/update_log" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/huise6" />

        <TextView
            android:id="@+id/tv_checkUpdate"
            style="@style/textStyle_black_16sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/entry"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/cheak_new" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_changePassword"
        style="@style/textStyle_black_16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/entry"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="@string/modify_psw" />

    <TextView
        android:id="@+id/tv_exit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/brn_stely"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:onClick="onClick"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="@string/login_out"
        android:textColor="#fff"
        android:textSize="18sp" />

</LinearLayout>