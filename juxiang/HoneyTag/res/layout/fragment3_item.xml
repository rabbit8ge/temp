<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="100"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/fragment3_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="255"
            android:background="@drawable/background"
            android:scaleType="fitXY"
            android:src="@drawable/tucheng" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tucheng" >

        <TextView
            android:id="@+id/tv_title"
            style="@style/textStyle_black_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:bufferType="spannable"
            android:gravity="center"
            android:text="@string/focusOn"
            android:textColor="@color/white" >
        </TextView>

        <TextView
            android:id="@+id/tv_number"
            style="@style/textStyle_black_18sp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="30dp"
            android:bufferType="spannable"
            android:gravity="center"
            android:text="1000"
            android:textColor="@color/white" >
        </TextView>

        <LinearLayout
            android:id="@+id/linear_attention"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|bottom"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_column"
                android:layout_width="15sp"
                android:layout_height="12sp"
                android:alpha="0.7"
                android:background="@drawable/collect"
                android:scaleType="centerInside" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:src="@drawable/btn_new" />
    </FrameLayout>

</FrameLayout>